{
  "name": "minesweeper-tg",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node --loader ts-node/esm server/index.ts",
    "dev": "nodemon --exec node --loader ts-node/esm server/index.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nanoid": "^5.1.5",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "typescript": "^5.0.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2"
  }
}
